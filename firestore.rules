rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT ENVIRONMENT RULES
    // These rules are permissive to allow rapid development and testing
    // Replace with proper security rules before production deployment
    
    match /{document=**} {
      // Allow all authenticated users to read and write
      // This is safe for development but NOT for production
      allow read, write: if request.auth != null;
    }
  }
}
