{
  "hosting": {
    "public": "build",
    "site": "tlm-client-portal",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {"source": "/service-worker.js", "headers": [{"key": "Cache-Control", "value": "no-cache"}]}
  ]
}
